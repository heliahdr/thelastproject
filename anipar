def count_words(sentence):
    words = sentence.split()
    word_count = {}

    for word in words:  # Loop over words in the sentence
    try:
        if word not in word_count:
            word_count[word] == 1  # Incorrect assignment operator
        else:
            word_count[word] += 1
        except:  # Too broad exception handling
            print("An error occurred while counting words.")

    return word_count

sentence = "this is a test sentence this is"
result = count_words(sentence)
print(result)
